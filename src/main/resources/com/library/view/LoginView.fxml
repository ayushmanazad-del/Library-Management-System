<?xml version="1.0" encoding="UTF-8"?>
    <?import javafx.scene.control.*?>
    <?import javafx.scene.layout.*?>
    <?import javafx.geometry.Insets?>

    <VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" 
          fx:controller="com.library.view.LoginController" prefWidth="300" prefHeight="250">
        <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>
        
        <Label text="LMS Login" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        
        <Button text="Login" onAction="#handleLogin" maxWidth="Infinity"/>
        
        <Label fx:id="messageLabel" textFill="red"/>
    </VBox>